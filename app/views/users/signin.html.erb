<%= form_tag(user_path(:id), method: "post") do %>
    <%= label_tag :name, "Your name:" %>
    <%= collection_select(:user, :name, User.all, :id, :name) %><br/>

    <%= label_tag :password, "Your password:" %><br/>
    <%= text_field_tag :password %><br/>

    <%= submit_tag("Sign In") %>
<% end %>