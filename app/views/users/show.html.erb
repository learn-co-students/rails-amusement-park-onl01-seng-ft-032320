<% if @user.admin %>
<p><strong>ADMIN</strong></p>
<% end %>
<% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
<% end %>
<p><strong>Name: </strong><%= @user.name %></p>
<p><strong>Tickets: </strong><%= @user.tickets %></p>
<p><strong>Mood: </strong>
<% unless @user.admin %>
    <%= @user.mood %></p>
<% end %>
<p><strong>Height: </strong><%= @user.height %> inches</p>
<a href="<%= attractions_url %>">See attractions</a>
