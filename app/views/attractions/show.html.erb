

<div class="center">
    <div class="info">
        <p>Name: <%= @attraction.name %></p>
        <p>Nausea rating: <%= @attraction.nausea_rating %></p>
        <p>Height minimum: <%= @attraction.min_height %></p>
        <p>Happiness rating: <%= @attraction.happiness_rating %></p>
        <p>Tickets: <%= @attraction.tickets %></p>
        <% if @user.admin %>
        <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
        <% else %>
        <%= form_tag rides_path do %><br>
        <%= hidden_field_tag :attraction_id, @attraction.id %><br>
        <p><%= submit_tag 'Go on this ride' %></p>
        <% end %>
        <% end %>
    </div>
</div>