
<p>Name: <%= @attraction.name %></p>
<p>Required Height: <%= @attraction.min_height %></p>
<p>Ticket Cost: <%= @attraction.tickets %></p>
<p>Happiness Rating: <%= @attraction.happiness_rating %></p>
<p>Nausea Rating: <%= @attraction.nausea_rating %></p>

<% if current_user.admin %>
  <p> <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></p>
<% elsif current_user %>
  <%= button_to "Go on this ride", {controller: "rides", action: "create", attraction_id: @attraction, user_id: current_user} %>

<% end %> <br>
