<div class="container" role="main">
      <p id="notice"></p>

  <div class="center">

    <div class="info">
        <p><strong>Name:</strong> <%=@attraction.name%></p>
        <p><strong>Total Number of Users:</strong> <%=@attraction.users.count%></p>
        <p><strong>Ticket Requirement:</strong> <%=@attraction.tickets%></p>
        <p><strong>Height Requirement:</strong> <%=@attraction.min_height%> inches</p>
        <p><strong>Nausea Rating:</strong> <%=@attraction.nausea_rating%></p>
        <p><strong>Happiness Rating:</strong> <%=@attraction.happiness_rating%></p>
        <% if @user.admin %>
            <%= link_to "Edit Attraction" , edit_attraction_path(@attraction.id)  %>
        <% else%>
            <%= form_tag "/rides", method: :post, :class => "new_ride" do%>
                <input type="hidden" value="<%=@user.id%>" name="ride[user_id]" id="ride_user_id"><br>
                <input type="hidden" value="<%=@attraction.id%>" name="ride[attraction_id]" id="ride_attraction_id"><br>
                <input type="submit" name="commit" value="Go on this ride" class="btn btn-light" data-disable-with="Go on this ride">
            <%end %>
        <% end%>


    </div>

  </div>

</div>