<li><strong>Name: </strong> <%= @attraction.name %></li>
<li><strong>Total Number of Users: </strong> <%= @attraction.users.count %></li>
<li><strong>Ticket Requirements: </strong> <%= @attraction.tickets %></li>
<li><strong>Height Requirements: </strong> <%= @attraction.min_height %></li>
<li><strong>Nausea Rating: </strong> <%= @attraction.nausea_rating %></li>
<li><strong>Happiness Rating: </strong> <%= @attraction.happiness_rating %></li>
<% if current_user.admin %>
    <a href="<%= edit_attraction_path(@attraction) %>">Edit Attraction</a>
<% else %>
    <%= form_tag rides_url do %>
        <%= hidden_field_tag(:attraction_id, value=@attraction.id) %>

        <%= submit_tag "Go on this ride"%>
    <% end %>
<% end %>