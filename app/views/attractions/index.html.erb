<div class="container">
    <h1>Listing attractions</h1>

    <table class="table">
        <tbody>
            <tr>
                <td>
                    Name
                </td>
                <td>
                    Tickets
                </td>
                <td>
                    Details
                </td>
            </tr>
        <% @attractions.each do |attraction| %>
            <tr>
                <td>
                    <%= attraction.name %>
                </td>
                <td>
                    <%= attraction.tickets %>
                </td>
                <td>
                    <% if @user.admin %>
                    <%= link_to "Show #{attraction.name}", attraction_path(attraction) %>
                    <% else %>
                    <%= link_to "Go on #{attraction.name}", attraction_path(attraction) %>
                    <% end %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>

    <% if @user.admin %>
    <%= link_to 'New Attraction', new_attraction_path %>
    <% end %>
</div>