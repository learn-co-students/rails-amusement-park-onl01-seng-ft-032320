<% @attractions.each do |a|%>
<% if current_user.admin%>
<%= link_to "Show #{a.name}", attraction_path(a) %>

<% else%>
<%= link_to "Go on #{a.name}", attraction_path(a) %>

<% end %>

<% end %>




<% if @user %>
  <p>
    <%= link_to "Back to profile", user_path(@user), {:class => "btn btn-primary"} %>
  </p>
<% else %>
  <p><%= link_to 'New Attraction', new_attraction_path %></p>
<% end %>