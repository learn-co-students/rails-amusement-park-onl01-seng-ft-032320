<h1>Attractions: </h1>

<% @attractions.each do |attraction| %>
  <% if current_user.admin %>
    <li> <%= link_to "Show #{attraction.name}", attraction_path(attraction.id) %> </li>
  <% else %>
  <li> <%= link_to "Go on #{attraction.name}", attraction_path(attraction.id) %> </li>
  <% end %>
<% end %>

<% if current_user.admin %>
  <%= link_to "New Attraction", new_attraction_path %>
<% end %>